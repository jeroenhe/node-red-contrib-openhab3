{
    "globals": {
        "Promise": true,
        "it": true,
        "describe": true
    },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        // "plugin@typescript-eslint/recommended",
        // "plugin@typescript-eslint/recommended-requiring-type-checking",
        "prettier"
        // "plugin:typescript-eslint/recommended-requiring-type-checking"
    ],
    "plugins": ["prettier"],
    "rules": {
        //"quotes": ["error", "single"],
        "no-useless-escape": 0,
        "prettier/prettier": "error",
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off"
    },
    "parserOptions":{
        "ecmaVersion": 2018,
        "project": ["./tsconfig.json"]
    }
}